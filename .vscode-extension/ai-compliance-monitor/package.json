{
  "name": "ai-compliance-monitor",
  "displayName": "AI Compliance Monitor",
  "description": "Monitors Cursor AI agent activity and enforces compliance rules with session tracking",
  "version": "1.1.1",
  "publisher": "just-daily-ops",
  "repository": {
    "type": "git",
    "url": "https://github.com/just-daily-ops/ai-compliance-monitor"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Linters"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiCompliance.runPreCheck",
        "title": "AI Compliance: Run Pre-Check"
      },
      {
        "command": "aiCompliance.runPostCheck",
        "title": "AI Compliance: Run Post-Check"
      },
      {
        "command": "aiCompliance.showStatus",
        "title": "AI Compliance: Show Status"
      },
      {
        "command": "aiCompliance.showHistory",
        "title": "AI Compliance: Show Session History"
      },
      {
        "command": "aiCompliance.enable",
        "title": "AI Compliance: Enable Monitoring"
      },
      {
        "command": "aiCompliance.disable",
        "title": "AI Compliance: Disable Monitoring"
      }
    ],
    "configuration": {
      "title": "AI Compliance Monitor",
      "properties": {
        "aiCompliance.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable AI compliance monitoring"
        },
        "aiCompliance.autoRunPreCheck": {
          "type": "boolean",
          "default": true,
          "description": "Automatically run pre-check when AI agent starts working"
        },
        "aiCompliance.autoRunPostCheck": {
          "type": "boolean",
          "default": true,
          "description": "Automatically run post-check after AI agent finishes"
        },
        "aiCompliance.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications for compliance status"
        },
        "aiCompliance.notificationLevel": {
          "type": "string",
          "enum": ["all", "warnings", "violations"],
          "default": "warnings",
          "description": "Level of notifications to show"
        },
        "aiCompliance.debounceMs": {
          "type": "number",
          "default": 2000,
          "description": "Debounce time in milliseconds before running post-check"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {}
}

